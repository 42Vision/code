.create-title {
  color: #384452;
  margin-left: 30px;
  width: 100%;
}

page {
  width: 100%;
  height: 100%;
}

#textareawrap {
  width: 100%;
  border-top: 1px solid #ddd;
}

.row {
  flex: 1;
  display: flex;
  width: 90%;
  height: 100%;
  margin: 0 5%;
  overflow: hidden;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.row .text {
  flex: 1;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 26px;
  color: #000;
}

.bottom {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #d9d9d9;
}

.bottom .btn {
  flex: 1;
  line-height: 2;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin: 30rpx 30rpx;
}

.btn.success {
  background-color: #384452;
  color: #fff;
}

.btn.del {
  background: #e64340;
  color: #fff;
}
